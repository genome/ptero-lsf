{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "POST /v1/jobs",
    "description": "Submit a new job.",

    "definitions": {
        "name": {
            "type": "string",
            "minLength": 1
        },
        "rlimit": {
            "type": "integer",
            "minimum": 0
        },
        "webhook": {
            "type": "string",
            "format": "uri",
            "minLength": 1
        }
    },

    "type": "object",
    "properties": {
        "command": { "$ref": "#/definitions/name" },
        "pollingInterval": {
            "type": "integer",
            "default": 900,
            "minimum": 0,
            "exclusiveMinimum": true
        },

        "webhooks": {
            "type": "object",
            "properties": {
                "error": { "$ref": "#/definitions/webhook" },
                "failure": { "$ref": "#/definitions/webhook" },
                "running": { "$ref": "#/definitions/webhook" },
                "scheduled": { "$ref": "#/definitions/webhook" },
                "submit": { "$ref": "#/definitions/webhook" },
                "success": { "$ref": "#/definitions/webhook" },
                "suspended": { "$ref": "#/definitions/webhook" }
            }
        },

        "options": {
            "type": "object",
            "properties": {
                "beginTime": { "type": "integer" },
                "errFile": { "type": "string" },
                "group": { "type": "string" },
                "inFile": { "type": "string" },
                "jobName": { "type": "string" },
                "mail_user": { "type": "string" },
                "maxNumProcessors": { "type": "integer" },
                "numProcessors": { "type": "integer" },
                "outFile": { "type": "string" },
                "preExecCmd": { "$ref": "#/definitions/name" },
                "postExecCmd": { "$ref": "#/definitions/name" },
                "projectName": { "type": "string" },
                "queue": { "type": "string" },
                "resReq": { "type": "string" },
                "termTime": { "type": "integer" }
            },
            "additionalProperties": false
        },

        "rLimits": {
            "type": "object",
            "properties": {
                "cpuTime": { "$ref": "#/definitions/rlimit" },
                "RSS": { "$ref": "#/definitions/rlimit" },
                "openFiles": { "$ref": "#/definitions/rlimit" },
                "processes": { "$ref": "#/definitions/rlimit" },
                "stack": { "$ref": "#/definitions/rlimit" },
                "threads": { "$ref": "#/definitions/rlimit" },
                "virtualMemory": { "$ref": "#/definitions/rlimit" }
            },
            "additionalProperties": false
        },

        "cwd": {
            "type": "string",
            "minLength": 1,
            "default": "/tmp"
        },
        "environment": {
            "type": "object",
            "items": { "$ref": "#/definitions/name" }
        }
    },

    "required": ["command"],
    "additionalProperties": false
}
